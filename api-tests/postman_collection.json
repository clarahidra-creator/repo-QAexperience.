{
  "info": {
    "name": "QA Portfolio \u2013 API Tests",
    "_postman_id": "dummy-id",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Healthcheck",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      },
      "event": []
    },
    {
      "name": "Auth \u2013 Login",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{email}}\",\"password\":\"{{password}}\"}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "event": []
    },
    {
      "name": "Orders \u2013 List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/orders?limit=10",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ]
      },
      "event": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.example.com"
    }
  ]
}